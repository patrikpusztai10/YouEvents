<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="484dp"
        android:layout_height="100dp"
        android:background="@color/radiobutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/ubuntu"
            android:gravity="center"
            android:text="YouEvents"
            android:textSize="32dp"
            android:textStyle="bold" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/radiobutton"
            android:clickable="true"
            app:tint="@color/cardview_dark_background"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            app:maxImageSize="35sp"
            android:contentDescription="Go back"
            app:elevation="0dp"

            app:srcCompat="?attr/homeAsUpIndicator" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="409dp"
        android:layout_height="629dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintVertical_bias="0.269">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="645dp">

            <EditText
                android:id="@+id/eventlocation"
                android:layout_width="352dp"
                android:layout_height="65dp"
                android:ems="15"
                android:fontFamily="@font/ubuntu"
                android:hint="Location"
                android:inputType="text"
                android:textSize="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.175"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventname"
                app:layout_constraintVertical_bias="0.038" />

            <EditText
                android:id="@+id/eventname"
                android:layout_width="352dp"
                android:layout_height="65dp"
                android:ems="15"
                android:fontFamily="@font/ubuntu"
                android:hint="Event name"
                android:inputType="text"
                android:textSize="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.157"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.125" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:text="Create new event:"
                android:textSize="25dp"
                app:layout_constraintBottom_toTopOf="@+id/eventname"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.051"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.464" />

            <EditText
                android:id="@+id/eventdate"
                android:layout_width="353dp"
                android:layout_height="62dp"
                android:ems="10"
                android:fontFamily="@font/ubuntu"
                android:hint="Date (DD/MM/YYYY)"
                android:inputType="date"
                android:textSize="23dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.178"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventlocation"
                app:layout_constraintVertical_bias="0.049" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:text="Upload event flyer:"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.038"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventdate"
                app:layout_constraintVertical_bias="0.364" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/upload_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@android:color/darker_gray"
                android:clickable="true"
                android:contentDescription="Upload event"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.045"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:layout_constraintVertical_bias="0.0"
                app:maxImageSize="32dp"
                app:srcCompat="@android:drawable/stat_sys_upload"
                app:tint="@android:color/black" />

            <Button
                android:id="@+id/create"
                android:layout_width="144dp"
                android:layout_height="73dp"
                android:fontFamily="@font/ubuntu"
                android:text="Create"
                android:textColor="#212121"
                android:textSize="22dp"
                android:textStyle="bold"
                app:backgroundTint="#4f90ff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/upload_image"
                app:layout_constraintVertical_bias="0.516" />

            <EditText
                android:id="@+id/eventdescription"
                android:layout_width="353dp"
                android:layout_height="62dp"
                android:ems="10"
                android:fontFamily="@font/ubuntu"
                android:gravity="start|top"
                android:hint="Short description"
                android:inputType="textMultiLine"
                android:textSize="22dp"
                app:layout_constraintBottom_toTopOf="@+id/textView11"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.178"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventdate"
                app:layout_constraintVertical_bias="0.333" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>